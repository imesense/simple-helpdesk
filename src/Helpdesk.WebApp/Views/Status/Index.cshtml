@model IEnumerable<Status>
@{
    ViewData["Title"] = "Статусы";
}

<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Список статусов</h1>
        </div>

        <div class="col text-end pt-1">
            <a asp-action="Create" class="btn btn-outline-primary">
                <i class="fa-solid fa-plus"></i> Добавить статус
            </a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Описание</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>
                        <a asp-action="Details" class="align-middle" asp-route-id="@item.StatusId">
                            @item.Description
                        </a>
                    </td>

                    <td>
                        <a asp-action="Edit" class="btn btn-success" asp-route-id="@item.StatusId">
                            <i class="fa-solid fa-edit"></i>
                        </a>
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.StatusId">
                            <i class="fa-solid fa-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
